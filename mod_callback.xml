<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
   <name>Callback</name>
   <author>web-eau.net</author>
   <version>1.2.0</version>
   <copyright>Copyright (C) 2005 - 2022 Open Source Matters. All rights reserved.</copyright>
   <license>GNU General Public License version 2 or later;</license>
   <authorEmail>daniel@web-eau.net</authorEmail>
   <authorUrl>https://web-eau.net</authorUrl>
   <description><![CDATA[Callback module developed by web-eau.net. Simple CallBack form. Gives the end user the possibility to request a phone call. The user types name and phone number and submits the form. When the form is submitted, an email is send to the address configured in the module. This module is a fork from mod_call_me_back created by  itfirmaet.dk ApS. Thanks to him for his nice work.<br />Visit <a href="https://web-eau.net" target="_blank">web-eau.net</a> for more free professional Joomla extensions.]]>
   </description>
   <files>
      <filename>mod_callback.xml</filename>
      <filename module="mod_callback">mod_callback.php</filename>
      <filename>helper.php</filename>
      <filename>mod_callback.xml</filename>
      <filename>index.html</filename>
      <filename>tmpl/default.php</filename>
      <filename>tmpl/index.html</filename>
   </files>
   	<updateservers>
		<server type="extension" priority="2" name="Module Callback">https://web-eau.net/files/callback/callback.xml</server>
	</updateservers>
   <languages>
      <language tag="da-DK">language/da-DK.mod_callback.ini</language>
      <language tag="de-DE">language/de-DE.mod_callback.ini</language>
      <language tag="en-GB">language/en-GB.mod_callback.ini</language>
      <language tag="es-ES">language/es-ES.mod_callback.ini</language>
      <language tag="fr-FR">language/fr-FR.mod_callback.ini</language>
      <language tag="he-IL">language/he-IL.mod_callback.ini</language>
      <language tag="hu-HU">language/hu-HU.mod_callback.ini</language>
      <language tag="it-IT">language/it-IT.mod_callback.ini</language>
      <language tag="nb-NO">language/nb-NO.mod_callback.ini</language>
      <language tag="nl-NL">language/nl-NL.mod_callback.ini</language>
      <language tag="pl-PL">language/pl-PL.mod_callback.ini</language>
      <language tag="ru-RU">language/ru-RU.mod_callback.ini</language>
      <language tag="sv-SE">language/sv-SE.mod_callback.ini</language>
      <language tag="uk-UA">language/uk-UA.mod_callback.ini</language>
   </languages>
   <config>
      <fields name="params">
	 <fieldset name="basic">
	    <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
	    <field name="spacer" type="spacer" hr="true" />
	    <field name="mod_callback_headline" type="text" required="false" size="52" label="MOD_CALLBACK_HEADLINE_LABEL" description="MOD_CALLBACK_HEADLINE_DESCRIPTION" />
	    <field name="mod_callback_intro" type="textarea" label="MOD_CALLBACK_INTRO_LABEL" rows="5" required="true" cols="30"	description="MOD_CALLBACK_INTRO_DESCRIPTION" default="Please enter your name and phone number" />
	    <field name="mod_callback_confirm" type="textarea" label="MOD_CALLBACK_CONFIRM_LABEL" rows="5" required="true" cols="30" description="MOD_CALLBACK_CONFIRM_DESCRIPTION" translate_default="true" default="Thank you for your inquiry" />
	    <field name="mod_callback_recipient" type="text" validate="email" default=""	required="true"	size="52" label="MOD_CALLBACK_RECIPIENT_LABEL"	description="MOD_CALLBACK_RECIPIENT_DESCRIPTION" />
	    <field name="mod_callback_redirect" type="text" default="" required="false" size="52" label="MOD_CALLBACK_REDERECT_LABEL" description="MOD_CALLBACK_REDERECT_DESCRIPTION" />
	    <field name="mod_callback_phonenumber_length" type="list" default="6" label="MOD_CALLBACK_PHONENUMBER_LENGTH_LABEL"  description ="MOD_CALLBACK_PHONENUMBER_LENGTH_DESCRIPTION">
	       <option value="1">1</option>
	       <option value="2">2</option>
	       <option value="3">3</option>
	       <option value="4">4</option>
	       <option value="5">5</option>
	       <option value="6">6</option>
	       <option value="7">7</option>
	       <option value="8">8</option>
	       <option value="9">9</option>
	       <option value="10">10</option>
	       <option value="11">11</option>
	       <option value="12">12</option>
	       <option value="13">13</option>
	       <option value="14">14</option>
	       <option value="15">15</option>
	       <option value="16">16</option>
	       <option value="17">17</option>
	       <option value="18">18</option>
	       <option value="19">19</option>
	       <option value="20">20</option>
	       <option value="21">21</option>
	       <option value="22">22</option>
	       <option value="23">23</option>
	       <option value="24">24</option>
	       <option value="25">25</option>
	       <option value="26">26</option>
	       <option value="27">27</option>
	       <option value="28">28</option>
	       <option value="29">29</option>
	       <option value="30">30</option>
	    </field>
	    <field name="mod_callback_hide_credit" type="radio" default="0" label="MOD_CALLBACK_CREDIT_LINK_LABEL"  description ="MOD_CALLBACK_CREDIT_LINK_DESCRIPTION">
	       <option value="0">JSHOW</option>
	       <option value="1">JHIDE</option>
	    </field>
	 </fieldset>
      </fields>
   </config>
</extension>
